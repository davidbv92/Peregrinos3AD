                  <Label text="Usuario:" textFill="#00528c">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="txtUsuario" promptText="usuario">
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Contraseña:" textFill="#00528c">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </Label>
                  <PasswordField fx:id="txtPassword" promptText="contraseña">
                     <VBox.margin>
                        <Insets bottom="5.0" />
